package jShell;

public class Pwd extends Command {

	/**
	 * Prints the full path to current working directory.
	 */
	public void run(String args[]) {
		//checking if the arguments entered are valid
		if(!isValid(args)) {
			return ;
		}
		
		/*
		 * Print path to current working directory. To be updated, once UserData and Path classes are done.
		 */
		Shell.getShell().outputToShellln("Printing the path to current working directory from UserData");
	};
	
	/**
	 * Return true if arguments args for pwd command are valid, return false otherwise. 
	 * If arguments are invalid, print error message.
	 * 
	 * @param args
	 * @return true if arguments in args are valid
	 */
	private boolean isValid(String args[]) {
		Error e = new Error();
		
		if (args.length > 0) {
			Shell.getShell().outputToShellln(e.errorMessage("WRONGARGS"));
			return false;
		}
		return true;
	};
	
}
